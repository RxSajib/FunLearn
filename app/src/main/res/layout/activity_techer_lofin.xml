<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TecherLofin">
    <TextView
        android:id="@+id/AdminLogin"
        android:textSize="22dp"
        android:textColor="#ff22"
        android:layout_marginLeft="20dp"
        android:text="Teacher Login"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <EditText
        android:layout_below="@+id/AdminLogin"
        android:id="@+id/AdminEmailID"
        android:padding="10dp"
        android:hint="Enter email"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>


    <EditText
        android:id="@+id/AdminPaswordIFD"
        android:padding="10dp"
        android:layout_below="@+id/AdminEmailID"
        android:hint="Enter email"
        android:layout_marginLeft="20dp"
        android:inputType="textPassword"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>

    <Button
        android:id="@+id/LLgoinID"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Login"
        android:background="#ff22"
        android:layout_below="@+id/AdminPaswordIFD"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Button>
</RelativeLayout>